head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title UFarm
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/home.css'  type='text/css' media='all')
  link(rel='stylesheet' href='/css/index.css' type='text/css' media='all')
div
  .page-wrapper
    .main-layouts.wrapper
      h1 Farmer One Update Form
      .main-inputs
        .spacing
          form(action='/update?id='+user._id method='POST')
            .row
              .col-md-6.form-left
                .mb-4.ml-5
                  img(src='pictures/pic1.jpg' alt='' style='height: 100px; width: 100px;')
                  br
                  a(href='') Upload photo
                input#name.form-control(type='text' name='name' value=user.name placeholder='Full Name')
                input#email.form-control(type='email' name='email' value=user.email placeholder='Email')
                input#contact.form-control(type='tel' name ='phonenumber' value=user.phonenumber pattern='[0-9]{3}-[0-9]{3}-[0-9]{4}' placeholder='Phone Number')
                input#role.form-control(type='text' name='role' value=user.role placeholder='Role')
                label.form-check.form-check-inline(style='color:white') Gender
                    br
                    br
                    input(type="radio" name="gender" value="female" checked=user.gender==="female")
                    label(style='color:white') Female 
                label.form-check.form-check-inline
                    input(type="radio" name="gender" value="male" checked=user.gender==="male")
                    label(style='color:white; float:right') Male
              .col-md-6.form-right
                input#NIN.form-control(type='text' name='nin' value=user.nin placeholder='NIN')
                input#occupation.form-control(type='text' value=user.occupation  name='occupation' placeholder='Occupation')
                input#location.form-control(type='text' name ='location' value=user.location placeholder='Home location')
                input#age.form-control(type='date' name='date' value=user.date placeholder='Date of Birth')
                select.form-control(name="resident")
                    option(value="permanent" selected=user.resident==="permanent") Permanent
                    option(value="non" selected=user.resident==="non") Non-Resident
                select.form-control(name="ward")
                    option(value="east" selected=user.ward==="east") East Ward
                    option(value="west" selected=user.ward==="west") West Ward
                    option(value="north" selected=user.ward==="north") North Ward 
                    option(value="South" selected=user.ward==="South") South Ward 
              button(type='submit') UPDATE
    br
  .footer
    .footer-content(style='background-color: darkslategray; color: white;')
      .row
        .col-md-3
          h2 About
          p
            a(href='#')  Services
          p
            a(href='#')  Policies
          p
            a(href='#')  Services
        .col-md-3
          h2 Contact us
          p
            a(href='#')  Services
          p
            a(href='#')  Services
          p
            a(href='#')  Services
        .col-md-3
          h2 Stay Updated
          p
            a(href='#')  Suscribe to get updates on new products
            form
              .row
                .col-md-8
                  input.form-control(type='Email' name='email' placeholder='Enter Email' required='')
                .col-md-4
                  button.btn.btn-success(type='Submit') Submit 
